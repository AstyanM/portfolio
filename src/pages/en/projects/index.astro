---
import BaseLayout from '@/layouts/BaseLayout.astro';
import ProjectGrid from '@/components/react/ProjectGrid';
import { getCollection } from 'astro:content';

const allProjects = await getCollection('projects', ({ data }) => {
  return data.lang === 'en' && !data.draft;
});

// Sort by year (most recent first)
const projects = allProjects.sort((a, b) => {
  const yearA = a.data.year ?? 0;
  const yearB = b.data.year ?? 0;
  return yearB - yearA;
});

// Transform for ProjectGrid
const projectsData = projects.map((p) => ({
  slug: p.slug,
  title: p.data.title,
  description: p.data.description,
  tags: p.data.tags,
  href: `/en/projects/${p.slug.split('/')[1]}`,
  coverUrl: p.data.cover?.src,
  repoUrl: p.data.repoPrivate ? undefined : p.data.repoUrl,
  year: p.data.year,
}));
---

<BaseLayout
  title="Projects | Astyan Martin"
  description="Discover my projects in engineering, AI, electronics and web development."
>
  <section class="pt-32 pb-16 md:pt-40 md:pb-24">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="mb-12">
        <h1 class="text-4xl font-bold text-foreground mb-4">My Projects</h1>
        <p class="text-lg text-foreground-secondary">
          A selection of technical projects combining exploration and innovation. Filter by technology to find what interests you.
        </p>
      </div>

      <ProjectGrid client:visible projects={projectsData} lang="en" showFilter={true} />
    </div>
  </section>
</BaseLayout>
