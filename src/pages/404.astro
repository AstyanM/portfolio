---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getLangFromUrl, useTranslations } from '@/i18n/utils';
import { ui } from '@/i18n/ui';
import { ArrowLeft } from 'lucide-react';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const base = import.meta.env.BASE_URL.replace(/\/$/, '');
---

<BaseLayout title={t('404.title')} description={t('404.description')}>
  <div class="flex flex-col items-center justify-center min-h-[70vh] px-4 text-center">
    <h1 class="text-9xl font-bold text-accent mb-4 animate-pulse">404</h1>
    
    <h2 class="text-2xl md:text-3xl font-semibold text-foreground mb-6">
      {t('404.title')}
    </h2>
    
    <p class="text-lg text-foreground-secondary max-w-md mb-10">
      {t('404.description')}
    </p>

    <a
      href={`${base}/${lang}`}
      class="inline-flex items-center gap-2 px-6 py-3 rounded-xl bg-accent text-white font-medium shadow-lg shadow-accent/25 hover:bg-accent-hover hover:scale-105 transition-all"
    >
      <ArrowLeft className="w-5 h-5" />
      {t('404.backHome')}
    </a>
  </div>
</BaseLayout>
