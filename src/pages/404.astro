---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getLangFromUrl, useTranslations, getProjectsPath } from '@/i18n/utils';
import HeroBackground from '@/components/astro/HeroBackground.astro';
import { ArrowLeft, FolderOpen, Mail } from 'lucide-react';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const base = import.meta.env.BASE_URL.replace(/\/$/, '');
const projectsPath = getProjectsPath(lang);
---

<BaseLayout title={t('404.title')} description={t('404.description')}>
  <div class="relative flex flex-col items-center justify-center min-h-[80vh] px-4 text-center">
    <HeroBackground />

    <!-- Gradient overlay -->
    <div class="absolute inset-0 bg-gradient-to-b from-background/50 via-background/80 to-background pointer-events-none -z-[5]"></div>

    <!-- 404 number with gradient text -->
    <h1 class="text-[10rem] md:text-[14rem] font-bold font-display leading-none gradient-text mb-2 animate-fade-in select-none">
      404
    </h1>

    <h2 class="text-2xl md:text-3xl font-semibold font-display text-foreground mb-4 animate-slide-up" style="animation-delay: 0.1s;">
      {t('404.title')}
    </h2>

    <p class="text-lg text-foreground-secondary max-w-md mb-12 animate-slide-up" style="animation-delay: 0.2s;">
      {t('404.description')}
    </p>

    <!-- Navigation paths -->
    <div class="flex flex-col sm:flex-row items-center gap-4">
      <a
        href={`${base}/${lang}`}
        class="inline-flex items-center gap-2 px-6 py-3 rounded-xl bg-accent text-white font-medium shadow-lg shadow-accent/25 hover:bg-accent-hover hover:scale-105 transition-all animate-slide-up"
        style="animation-delay: 0.3s;"
      >
        <ArrowLeft className="w-5 h-5" />
        {t('404.backHome')}
      </a>

      <a
        href={projectsPath}
        class="inline-flex items-center gap-2 px-6 py-3 rounded-xl bg-background border border-border font-medium hover:border-accent hover:text-accent hover:scale-105 transition-all animate-slide-up"
        style="animation-delay: 0.4s;"
      >
        <FolderOpen className="w-5 h-5" />
        {t('404.viewProjects')}
      </a>

      <a
        href={`${base}/${lang}#contact`}
        class="inline-flex items-center gap-2 px-6 py-3 rounded-xl bg-background border border-border font-medium hover:border-accent hover:text-accent hover:scale-105 transition-all animate-slide-up"
        style="animation-delay: 0.5s;"
      >
        <Mail className="w-5 h-5" />
        {t('404.contact')}
      </a>
    </div>
  </div>
</BaseLayout>
