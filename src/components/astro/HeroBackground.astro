<div class="absolute inset-0 overflow-hidden pointer-events-none -z-10">
  <!-- SVG dot grid pattern -->
  <svg class="absolute inset-0 w-full h-full dot-grid" aria-hidden="true">
    <defs>
      <pattern id="dot-pattern" x="0" y="0" width="32" height="32" patternUnits="userSpaceOnUse">
        <circle cx="1" cy="1" r="1" fill="currentColor" />
      </pattern>
      <radialGradient id="dot-mask-gradient" cx="50%" cy="40%" r="60%">
        <stop offset="0%" stop-color="white" />
        <stop offset="100%" stop-color="black" />
      </radialGradient>
      <mask id="dot-mask">
        <rect width="100%" height="100%" fill="url(#dot-mask-gradient)" />
      </mask>
    </defs>
    <rect width="100%" height="100%" fill="url(#dot-pattern)" mask="url(#dot-mask)" class="text-foreground-secondary/20" />
  </svg>

  <!-- Subtle amber glow -->
  <div class="absolute top-1/4 left-1/2 -translate-x-1/2 w-[500px] h-[500px] bg-accent/8 rounded-full blur-[120px]"></div>
</div>

<style>
  /* Mobile: reduced density */
  @media (max-width: 768px) {
    #dot-pattern {
      width: 48px;
      height: 48px;
    }

    .dot-grid + div {
      width: 300px !important;
      height: 300px !important;
    }
  }

  /* Respect reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .dot-grid,
    .dot-grid + div {
      animation: none !important;
    }
  }
</style>
