---
import { useTranslations } from '@/i18n/utils';
import type { Lang } from '@/i18n/ui';

interface ImpactItem {
  value: string;
  label: string;
}

interface Props {
  items: ImpactItem[];
  lang: Lang;
}

const { items, lang } = Astro.props;
const t = useTranslations(lang);
---

<aside class="mb-8">
  <div class="bg-accent/[0.06] border border-accent/20 rounded-2xl p-7 sm:p-5 relative overflow-hidden">
    <!-- Accent left bar -->
    <div class="absolute left-0 top-0 bottom-0 w-1 bg-gradient-to-b from-accent to-accent/60 rounded-l-2xl"></div>

    <div class="flex items-center gap-3 mb-5">
      <svg class="w-5 h-5 text-accent flex-shrink-0" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <polyline points="22 12 18 12 15 21 9 3 6 12 2 12"/>
      </svg>
      <h2 id="impact" class="text-xl font-semibold font-display text-foreground tracking-tight m-0">{t('project.impact')}</h2>
    </div>

    <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-5">
      {items.map((item) => (
        <div class="flex flex-col gap-1">
          <span class="text-2xl font-bold text-accent leading-tight">{item.value}</span>
          <span class="text-sm text-foreground-secondary leading-relaxed">{item.label}</span>
        </div>
      ))}
    </div>
  </div>
</aside>
