---
import { getEntry } from 'astro:content';
import { ArrowRight, Star } from 'lucide-react';
import { ui } from '@/i18n/ui';
import { getProjectPath, getAssetUrl } from '@/i18n/utils';

const { lang = 'en' } = Astro.props;

// Tag translation helper
const translateTag = (tag: string): string => {
  const key = `tag.${tag}` as keyof (typeof ui)[typeof lang];
  return ui[lang][key] || tag;
};

// Define specific project slug based on language
const projectSlug = lang === 'fr' ? 'simulateur-parcoursup' : 'simulateur-parcoursup';
// Note: In content collections, the slug usually includes the language folder if it's organized that way, 
// OR simpler: we query by slug matching the file structure. 
// Based on previous file views: `src/content/projects/en/simulateur-parcoursup.md`
// The collection slug is usually `en/simulateur-parcoursup`.

const fullSlug = `${lang}/${projectSlug}`;
const project = await getEntry('projects', fullSlug);

if (!project) return null;

const { data } = project;

const translations = {
  fr: {
    label: "Projet à la Une",
    btn: "Voir le projet en détails",
  },
  en: {
    label: "Featured Project",
    btn: "View project details",
  }
};

const t = translations[lang] || translations.fr;
const projectUrl = getProjectPath(projectSlug, lang);
---

<section class="py-12 md:py-16 bg-background-secondary/20 animate-on-scroll">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Image Side -->
      <div class="relative group">
        <!-- Optimized Gradient Blur: Static opacity, hardware accelerated -->
        <div 
          class="absolute -inset-4 bg-gradient-to-r from-accent to-purple-600 rounded-2xl opacity-20 blur-lg transition-opacity duration-500 will-change-transform" 
          style="transform: translateZ(0);"
        ></div>
        
        <div class="relative rounded-xl overflow-hidden shadow-2xl border border-border/50 aspect-video">
          {data.cover ? (
            <img 
              src={getAssetUrl(data.cover?.src || data.cover)} 
              alt={data.title}
              class="w-full h-full object-cover"
              loading="lazy"
              decoding="async"
            />
          ) : (
            <!-- Premium gradient for featured project without cover -->
            <div class="w-full h-full bg-gradient-to-br from-[#6C4AB6] via-[#B14AED] to-[#14F1D9] relative overflow-hidden">
              <!-- Animated overlay patterns -->
              <div class="absolute inset-0 opacity-30">
                <div class="absolute top-10 left-10 w-32 h-32 bg-white/10 rounded-full blur-2xl animate-pulse"></div>
                <div class="absolute bottom-20 right-20 w-40 h-40 bg-white/10 rounded-full blur-3xl" style="animation: pulse 3s ease-in-out infinite;"></div>
                <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-64 h-64 bg-white/5 rounded-full blur-3xl"></div>
              </div>
              <!-- Geometric patterns -->
              <div class="absolute inset-0 opacity-20">
                <div class="absolute top-1/4 right-1/4 w-48 h-1 bg-white/30 rotate-45"></div>
                <div class="absolute bottom-1/4 left-1/4 w-48 h-1 bg-white/30 -rotate-45"></div>
              </div>
              <!-- Title overlay -->
              <div class="absolute inset-0 flex items-center justify-center">
                <div class="text-center text-white/95 px-8">
                  <div class="text-7xl font-bold mb-2 drop-shadow-2xl tracking-tight">
                    {data.title.charAt(0)}
                  </div>
                  <div class="text-xl font-medium drop-shadow-lg opacity-80">
                    {data.title}
                  </div>
                </div>
              </div>
            </div>
          )}
        </div>
      </div>

      <!-- Content Side -->
      <div>
        <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-accent/10 text-accent text-sm font-medium mb-6 animate-fade-in border border-accent/20">
          <Star className="w-4 h-4 fill-accent" />
          {t.label}
        </div>

        <h2 class="text-3xl md:text-4xl font-bold text-foreground mb-4 leading-tight">
          {data.title}
        </h2>

        <p class="text-lg text-foreground-secondary mb-6 leading-relaxed">
          {data.description}
        </p>

        <div class="flex flex-wrap gap-2 mb-8">
          {data.tags.slice(0, 4).map(tag => (
            <span class="px-3 py-1 text-sm bg-background border border-border rounded-lg text-foreground-secondary">
              {translateTag(tag)}
            </span>
          ))}
        </div>

        <a 
          href={projectUrl}
          class="inline-flex items-center gap-2 px-6 py-3 bg-foreground text-background rounded-lg hover:bg-foreground/90 hover:scale-105 transition-all duration-300 font-medium shadow-lg"
        >
          {t.btn}
          <ArrowRight class="w-4 h-4" />
        </a>
      </div>
    </div>

  </div>
</section>
