---
import { useTranslations } from '@/i18n/utils';
import type { Lang } from '@/i18n/ui';

interface Props {
  content: string;
  lang: Lang;
}

const { content, lang } = Astro.props;
const t = useTranslations(lang);
---

<aside class="mt-4 mb-6 relative">
  <!-- Giant decorative opening quote -->
  <span
    aria-hidden="true"
    class="absolute -top-4 -left-2 text-[7rem] leading-none font-serif text-accent/20 select-none pointer-events-none"
  >&ldquo;</span>

  <div class="pl-8 pt-4">
    <p class="text-lg md:text-xl leading-relaxed text-foreground font-light italic">
      {content}
    </p>
    <p class="mt-4 text-xs font-semibold uppercase tracking-widest text-accent">
      {t('project.summary.label')}
    </p>
  </div>
</aside>
